<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottomsheet"
    android:background="#fff"
    android:padding="@dimen/margin_medium"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_peekHeight="300dp"
    app:behavior_hideable="false">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_iv"
        android:layout_width="@dimen/circleview"
        android:layout_height="@dimen/forty8"
        android:src="@drawable/detail"/>
    <TextView
        android:layout_toEndOf="@id/user_iv"
        android:id="@+id/user_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_miguel_runa"
        android:textSize="@dimen/text_regular_2x"/>
    <TextView
        android:layout_toEndOf="@id/user_iv"
        android:layout_below="@id/user_tv"
        android:id="@+id/user_account_tv"
        android:text="@string/tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_download"
        android:layout_toEndOf="@id/user_tv"
     android:layout_marginStart="@dimen/fifty"
android:padding="@dimen/margin_small"
        android:layout_width="@dimen/thirty"
        android:layout_height="@dimen/thirty"
        android:src="@drawable/download"/>
    <ToggleButton
        android:id="@+id/fav_toggle"
        android:layout_toEndOf="@id/iv_download"
       android:layout_marginStart="@dimen/margin_large"
        android:layout_width="@dimen/thirty"
        android:layout_height="@dimen/thirty"
        android:textOff=""
        android:textOn=""
        android:background="@drawable/ic_favorite_border_black_24dp"/>

    <TextView
        android:layout_below="@id/user_account_tv"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Related Photos"
        android:layout_marginTop="@dimen/margin_large"
        android:textSize="@dimen/text_regular_3x"/>
    <ScrollView
        android:layout_below="@id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/rv_related_photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </ScrollView>
</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>